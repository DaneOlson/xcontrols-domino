<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xc="http://www.ibm.com/xsp/custom"
	xmlns:unp="http://unplugged.teamstudio.com">
	<unp:UnpBootFormEditor showbuttons="yes"
		viewxpagename="MyActivities.xsp" formname="Activity" title="Activity"
		xp:key="facet_1">
		<xp:this.facets>
			<xp:panel id="list-group" xp:key="facet_1">
				<div class="form-group">
					<xp:label styleClass="col-xs-4 control-label" for="name"
						value="Contact"></xp:label>
					<div class="col-xs-8">
						<xp:inputText id="contact" value="#{docedit.Contact}"
							styleClass="form-control required">
							<xp:this.attrs>
								<xp:attr name="placeholder" value="Contact"></xp:attr>
							</xp:this.attrs>
						</xp:inputText>
						<a href="" class="bootcards-clearinput">
							<i class="fa fa-lg fa-times-circle"></i>
						</a>
					</div>
				</div>
				<div class="form-group">
					<xp:label styleClass="col-xs-4 control-label" for="company"
						value="Company"></xp:label>
					<div class="col-xs-8">
						<xp:inputText id="company" value="#{docedit.Company}"
							styleClass="form-control required">
							<xp:this.attrs>
								<xp:attr name="placeholder" value="Company"></xp:attr>
							</xp:this.attrs>
						</xp:inputText>
						<a href="" class="bootcards-clearinput">
							<i class="fa fa-lg fa-times-circle"></i>
						</a>
					</div>
				</div>
				<div class="form-group">
					<xp:label value="Date" id="datelabel" for="date"
						styleClass="col-xs-4 control-label">
					</xp:label>
					<div class="col-xs-8">
						<xp:inputText id="date" value="#{docedit.Date}"
							styleClass="form-control" type="date">
							<xp:this.converter>
								<xp:convertDateTime>
									<xp:this.pattern><![CDATA[${javascript:if (docedit.isEditable()){
	return "yyyy-MM-dd";
}else{
	return "dd MMM yyyy";
}}]]></xp:this.pattern>
								</xp:convertDateTime>
							</xp:this.converter>
						</xp:inputText>
					</div>
				</div>
				<div class="form-group">
					<xp:label styleClass="col-xs-4 control-label" for="type"
						value="Type"></xp:label>
					<div class="col-xs-8">
						<xp:comboBox id="comboBox1" value="#{docedit.Type}"
							styleClass="form-control">
							<xp:selectItems>
								<xp:this.value><![CDATA[#{javascript:["Call Report", "To-Do", "Reminder", "Note"]}]]></xp:this.value>
							</xp:selectItems>
						</xp:comboBox>
					</div>
				</div>
				<div class="form-group">
					<xp:label styleClass="col-xs-4 control-label" for="assignedto"
						value="Assigned To"></xp:label>
					<div class="col-xs-8">
						<xp:comboBox id="assignedto" value="#{docedit.AssignedTo}"
							styleClass="form-control">
							<xp:selectItems>
								<xp:this.value><![CDATA[#{javascript:@Unique(@DbColumn(@DbName(), "Activities By Contact", 1))}]]></xp:this.value>
							</xp:selectItems>
						</xp:comboBox>
					</div>
				</div>
				<div class="form-group">
					<xp:label styleClass="col-xs-4 control-label" for="title"
						value="Title"></xp:label>
					<div class="col-xs-8">
						<xp:inputText id="title" value="#{docedit.Title}"
							styleClass="form-control required">
							<xp:this.attrs>
								<xp:attr name="placeholder" value="Title"></xp:attr>
							</xp:this.attrs>
						</xp:inputText>
						<a href="" class="bootcards-clearinput">
							<i class="fa fa-lg fa-times-circle"></i>
						</a>
					</div>
				</div>
				<div class="form-group">
					<xp:label value="Details" id="biolabel" for="body"
						styleClass="col-xs-4 control-label">
					</xp:label>
					<div class="col-xs-8">
						<unp:UnpBootTypographyEdit fieldname="body">
						</unp:UnpBootTypographyEdit>
					</div>
				</div>
			</xp:panel>
		</xp:this.facets>
	</unp:UnpBootFormEditor>
</xp:view>
